# Runtime configuration for the local Pinguin notifier.
# Copy this file to pinguin/.env and replace placeholder values before starting the stack.

DATABASE_PATH=/app/data/pinguin.db
LOG_LEVEL=INFO
GRPC_AUTH_TOKEN=replace-with-shared-token
MAX_RETRIES=3
RETRY_INTERVAL_SEC=30
CONNECTION_TIMEOUT_SEC=5
OPERATION_TIMEOUT_SEC=30

SMTP_USERNAME=dev@example.com
SMTP_PASSWORD=replace-with-smtp-password
FROM_EMAIL=dev@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587

GIN_MODE=release
GOEXPERIMENT=greenteagc

TWILIO_ACCOUNT_SID=replace-with-twilio-sid
TWILIO_AUTH_TOKEN=replace-with-twilio-token
TWILIO_FROM_NUMBER=+10000000000
